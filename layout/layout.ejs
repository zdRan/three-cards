<html >
	<head>
		<meta charset="utf-8">
		
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, minimal-ui">
		<script src="https://cdn.jsdelivr.net/npm/vue@2.6.12/dist/vue.js"></script>
		<script src="https://cdn.bootcdn.net/ajax/libs/vuetify/2.0.4/vuetify.min.js"></script>
		<script async src="https://busuanzi.ibruce.info/busuanzi/2.3/busuanzi.pure.mini.js"></script>
		<link href="https://cdn.bootcdn.net/ajax/libs/vuetify/2.6.12/vuetify.min.css" rel="stylesheet">
		
		<script src="https://cdn.bootcdn.net/ajax/libs/highlight.js/11.7.0/es/highlight.min.js"></script>
		<link href="https://cdn.bootcdn.net/ajax/libs/highlight.js/11.7.0/styles/agate.min.css" rel="stylesheet">
		<link href="https://cdn.bootcdn.net/ajax/libs/MaterialDesign-Webfont/6.9.96/css/materialdesignicons.min.css" rel="stylesheet">
		<link href="/css/three-cards-style.css" rel="stylesheet">

		<meta name="robots" contect= "all">
		<meta name="description" contect="<%- theme.header.slogan %>">
		<!-- 主页使用 category作为 keywords,文章页使用文章的 keywords -->
		<% if(is_home()){ %>
		<meta name="keywords" contect="<%= theme.header.keywords %><% if (site.categories && site.categories.length){site.categories.each(function(category) {%><%- ','+trim(category.name) %><% });} %>">
		<% } else if(is_post()){ %>
		<meta name="keywords" contect="<%= theme.header.keywords %><% if (page.keywords && page.keywords.length){for(key in page.keywords){ %><%- ','+trim(page.keywords[key]) %><% };} %>">
		<%}%> 
		<link rel="icon shortcut" type="image/ico" href=<%- theme.header.favicon %>>
		<title>
			<%- theme.header.title %>
		</title>
		<!-- 百度统计 -->
		<% if(theme.header.siteVerification.baidu){ %> 
		<script>
			var _hmt = _hmt || [];
			(function() {
			  var hm = document.createElement("script");
			  hm.src = "https://hm.baidu.com/hm.js?<%-theme.header.siteVerification.baidu%>";
			  var s = document.getElementsByTagName("script")[0]; 
			  s.parentNode.insertBefore(hm, s);
			})();
		</script>
		<%}%>
		<!-- Google Search Console -->
		<% if(theme.header.siteVerification.google){ %> 
		<meta name="google-site-verification" content="<%-theme.header.siteVerification.google%>">
		<%}%>
	</head>
	<body>
		<div id="app">
			<v-app>
				<!-- 页头 -->
				<%- partial('partial/header')%> 
				<v-main style="width: 55%; margin: 0 auto; text-align:center;">
					<%- body %> 
					<!-- 分页 -->
					<%- partial('partial/paginator') %>
				</v-main>
				<!-- 页脚 -->
				<%- partial('partial/footer')%> 
			</v-app>			
		</div>
        <script>
        	new Vue({
            	el: '#app',
            	vuetify: new Vuetify(),
          	});
			//加载代码高亮
			<% if( (is_post()) ){ %>
				hljs.initHighlightingOnLoad();
			<%};%>
        </script>
    </body>
</html>